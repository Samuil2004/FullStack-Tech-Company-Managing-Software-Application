@page
@model MediaBazaarWeb.Pages.ForgottenPasswordModel
@{
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="error-message">
        <span class="text-danger">@TempData["ErrorMessage"]</span>
    </div>
}
<form method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control" required/>
    </div>
    <div class="form-group">
        <small class="text-muted">Choose one of the following questions:</small>
        <select name="SecretQuestionOptions" class="form-control">
            <option value="What is the name of your first pet?">What is the name of your first pet?</option>
            <option value="What is the maiden name of your mother?">What is the maiden name of your mother?</option>
            <option value="Where did your parents first meet?">Where did your parents first meet?</option>
        </select>
    </div>
    <div class="form-group">
        <label for="SecretAnswer">Secret Answer</label>
        <input asp-for="SecretAnswer" class="form-control" required/>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
